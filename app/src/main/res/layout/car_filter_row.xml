<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/llCarFilter"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10">

        <com.verkoopapp.fonts.textView.GothiBoldTextView
            android:id="@+id/tvCarBodyType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_body_type"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCarBodyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10">

        <com.verkoopapp.fonts.textView.GothiBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_4">

                <LinearLayout
                    android:id="@+id/ll15PerMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <com.verkoopapp.fonts.textView.GothicThinTextView
                        android:id="@+id/tvFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_15k_month"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_4">

                <LinearLayout
                    android:id="@+id/llMore15PerMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <com.verkoopapp.fonts.textView.GothicThinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_15_month"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                app:cardElevation="@dimen/dp_4">

                <LinearLayout
                    android:id="@+id/ll25PerMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <com.verkoopapp.fonts.textView.GothicThinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_25_month"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_weight="2"
                android:layout_marginBottom="@dimen/dp_8"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_4">

                <LinearLayout
                    android:id="@+id/llMore25PerMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <com.verkoopapp.fonts.textView.GothicThinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_25_month_"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:visibility="gone"
        android:background="@color/gray_back" />

</LinearLayout>