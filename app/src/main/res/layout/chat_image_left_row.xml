<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/llLeftPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_4"
                        android:background="@drawable/white_rectangular_shape"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/tvPhotoLeft"
                            android:layout_width="@dimen/dp_180"
                            android:layout_height="@dimen/dp_180"
                            android:contentDescription="@string/chat"
                            android:scaleType="fitXY"
                            android:src="@mipmap/gallery_place"
                            android:transitionName="pic" />
                    </LinearLayout>

                <com.verkoopapp.fonts.textView.GothicThinTextView
                    android:id="@+id/tvImageDataLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="@dimen/dp_5"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_10"
                    android:visibility="visible"
                    card_view:ignore="RtlHardcoded" />
            </LinearLayout>

            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dp_8"
                android:textColor="@color/black_light"
                android:visibility="gone"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>