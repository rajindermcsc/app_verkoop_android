<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bag"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/profile_bg"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeftLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_1"
                android:contentDescription="@string/back"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/back" />

            <com.verkoopapp.fonts.textView.GothiBoldTextView
                android:id="@+id/tvHeaderLoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="2"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_8"
                android:contentDescription="@string/back"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/tick"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <com.verkoopapp.fonts.textView.GothiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/account_setting"
                    android:background="@color/light_red"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/edit_profile"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/dp_15"
                android:src="@drawable/ic_arrow_drop_down">

            </ImageView>

        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/change_password"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dp_15"
                    android:src="@drawable/ic_arrow_drop_down">
                </ImageView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/notification"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/dp_15"
                android:src="@drawable/ic_arrow_drop_down">
            </ImageView>
        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvPrivatePolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/date_privacy_settings"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dp_15"
                    android:src="@drawable/ic_arrow_drop_down">
                </ImageView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <com.verkoopapp.fonts.textView.GothiBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/need_help"
                android:background="@color/light_red"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvHelpCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/help_center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/dp_15"
                android:src="@drawable/ic_arrow_drop_down">
            </ImageView>
        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvContactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/contact_us"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dp_15"
                    android:src="@drawable/ic_arrow_drop_down">
                </ImageView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvAboutVerkoop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/about_carousell"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/dp_15"
                android:src="@drawable/ic_arrow_drop_down">
            </ImageView>
        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />



            <com.verkoopapp.fonts.textView.GothiBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/about_this_app"
                android:background="@color/light_red"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvTermsService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/term_of_services"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dp_15"
                    android:src="@drawable/ic_arrow_drop_down">
                </ImageView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/privacy_policy"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/dp_15"
                android:src="@drawable/ic_arrow_drop_down">
            </ImageView>
        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvDeActivateAcct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/deactivate_account"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dp_15"
                    android:src="@drawable/ic_arrow_drop_down">
                </ImageView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothicThinTextView
                android:id="@+id/tvBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/upload_banner"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/dp_15"
                android:src="@drawable/ic_arrow_drop_down">
            </ImageView>
        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/colorDividerLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <com.verkoopapp.fonts.textView.GothiBoldTextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_8"
                android:text="@string/logout"
                android:textColor="@color/black_"
                android:textSize="@dimen/sp_18" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dp_15"
                    android:src="@drawable/ic_arrow_drop_down">
                </ImageView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>