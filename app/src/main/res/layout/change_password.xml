<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llParentPass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/profile_bg"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeftLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_1"
                android:contentDescription="@string/back"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_arrow_back_white" />

            <com.verkoopapp.fonts.textView.GothiBoldTextView
                android:id="@+id/tvHeaderLoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="2"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_8"
                android:contentDescription="@string/back"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/tick"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_15"
        tools:ignore="UselessParent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/rounded_background_edittext"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPasswordS"
                android:layout_width="@dimen/dp_35"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                app:srcCompat="@drawable/ic_password_login" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray">
            </View>

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="@dimen/dp_10"
                android:hint="@string/current_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="80"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor_shape"
                android:maxLines="1"
                android:padding="@dimen/dp_10"
                app:drawable_hide="@mipmap/password_hide"
                app:drawable_show="@mipmap/password_show" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_edittext">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNewPassword"
                android:layout_width="@dimen/dp_35"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                app:srcCompat="@drawable/ic_password_login" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray">
            </View>

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="@dimen/dp_10"
                android:hint="@string/new_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/cursor_shape"
                android:maxLength="80"
                android:maxLines="1"
                android:padding="@dimen/dp_10"
                android:textColor="@color/colorPrimary"
                app:drawable_hide="@mipmap/password_hide"
                app:drawable_show="@mipmap/password_show" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background_edittext">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivConfPassword"
                android:layout_width="@dimen/dp_35"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                app:srcCompat="@drawable/ic_password_login" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray">
            </View>

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="@dimen/dp_10"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/cursor_shape"
                android:maxLength="80"
                android:maxLines="1"
                android:padding="@dimen/dp_10"
                android:textColor="@color/colorPrimary"
                app:drawable_hide="@mipmap/password_hide"
                app:drawable_show="@mipmap/password_show" />
        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginTop="@dimen/dp_30"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <com.verkoopapp.fonts.textView.GothicThinTextView
                    android:id="@+id/tvSavePass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/button_background_capsule"
                    android:gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:padding="@dimen/dp_10"
                    android:text="@string/save"
                    android:textColor="@color/white" />


            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbProgressChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
