<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bag"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:baselineAligned="false"
        android:elevation="@dimen/dp_8"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_18"
        android:paddingStart="@dimen/dp_18"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight=".5"
            android:background="@drawable/white_rectangular_shape"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <com.verkoop.fonts.textView.GothiBoldTextView
                android:id="@+id/tvCategoryProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_15"
                android:drawableStart="@mipmap/category"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/category"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_14"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_weight="3"
            android:background="@drawable/white_rectangular_shape"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <com.verkoop.fonts.textView.GothiBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableEnd="@mipmap/search"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/search"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_14"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:contentDescription="@string/background"
                android:src="@mipmap/profile_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/ivProfileImage"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            android:src="@mipmap/pic_3"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="0dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/travis_desantis"
                                android:textColor="@color/black_"
                                android:textSize="@dimen/sp_14" />

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_281_wilkinson_street"
                                android:textColor="@color/text_gray_"
                                android:textSize="@dimen/sp_12" />

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nashville_tennessee_tn_37203"
                                android:textColor="@color/text_gray_"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivSetting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/setting"
                            android:padding="@dimen/dp_10"
                            android:src="@mipmap/setting" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal">

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/date_of_joining"
                            android:textColor="@color/black_"
                            android:textSize="@dimen/sp_12" />

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:id="@+id/tvJoiningDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="@string/_02_december_2019"
                            android:textColor="@color/text_gray_"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:orientation="horizontal">

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:ems="5"
                            android:text="@string/verified"
                            android:textColor="@color/black_"
                            android:textSize="@dimen/sp_12" />

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:id="@+id/tvVerifiedType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:ems="3"
                            android:text="@string/phone_number"
                            android:textColor="@color/text_gray_"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_18"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/dp_8">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.verkoop.fonts.textView.GothiBoldTextView
                                    android:id="@+id/tvFollowers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_250"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp_23" />

                                <com.verkoop.fonts.textView.GothiBoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/followers"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/dp_8"
                                android:layout_marginTop="@dimen/dp_8"
                                android:background="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.verkoop.fonts.textView.GothiBoldTextView
                                    android:id="@+id/tvFollowing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_1281"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp_23" />

                                <com.verkoop.fonts.textView.GothiBoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/following"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/dp_8">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_10">

                            <LinearLayout
                                android:id="@+id/llFavourite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/favourite"
                                    android:src="@mipmap/favourites_grey" />

                                <com.verkoop.fonts.textView.GothiBoldTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_18"
                                    android:drawableEnd="@mipmap/arrow_right"
                                    android:drawablePadding="@dimen/dp_10"
                                    android:text="@string/favourites"
                                    android:textColor="@color/text_gray_"
                                    android:textSize="@dimen/sp_16" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_.5"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_8"
                                android:background="@color/gray_se" />

                            <LinearLayout
                                android:id="@+id/llShare"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/share"
                                    android:src="@mipmap/share_grey" />

                                <com.verkoop.fonts.textView.GothiBoldTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_18"
                                    android:drawableEnd="@mipmap/arrow_right"
                                    android:drawablePadding="@dimen/dp_10"
                                    android:text="@string/share"
                                    android:textColor="@color/text_gray_"
                                    android:textSize="@dimen/sp_16" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="2"
                            android:background="@color/gray_se" />

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:text="@string/posts"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/sp_16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="2"
                            android:background="@color/gray_se" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llProfileParent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.verkoop.utils.NonscrollRecylerview
                        android:id="@+id/rvPostsList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>