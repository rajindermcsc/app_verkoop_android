<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/white_rectangular_shape"
        android:padding="@dimen/dp_10">
        <com.verkoop.fonts.textView.GothiBoldTextView
            android:id="@+id/tvLeftOfferMssg"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.verkoop.fonts.textView.GothicThinTextView
            android:id="@+id/tvLeftOfferPrice"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.verkoop.fonts.textView.GothicThinTextView
            android:id="@+id/tvLeftOfferTime"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_4" />
    </LinearLayout>
</LinearLayout>