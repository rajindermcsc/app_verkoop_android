<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/white_dialog_rectangular_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            android:background="@drawable/white_dialog_rectangular_shape"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.verkoopapp.fonts.textView.GothiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leave_without_selecting_meet_up_location"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/sp_18" />

                <com.verkoopapp.fonts.textView.GothicThinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selecting_a_location_helps_more_buyers_to_find_you_item_we_recommend_adding_one"
                    android:textColor="@color/black_light"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textSize="@dimen/sp_14" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">
                    <com.verkoopapp.fonts.textView.GothiBoldTextView
                         android:id="@+id/tvResume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resume"
                        android:textSize="@dimen/sp_14"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/red"/>
                    <com.verkoopapp.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvLeave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leave"
                        android:textSize="@dimen/sp_14"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/red"/>
                </LinearLayout>

                </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/dp_8"
            android:src="@mipmap/close"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
