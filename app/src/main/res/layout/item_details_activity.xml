                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_10"
                            android:paddingStart="@dimen/dp_8">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="@string/parking_type"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvParking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_10"
                            android:paddingStart="@dimen/dp_8">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/street_name_"
                                android:layout_weight="1.3"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvStreetName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_10"
                            android:paddingStart="@dimen/dp_8">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/postal_code_"
                                android:layout_weight="1.3"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvPostalCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/dp_8"
                            android:paddingStart="@dimen/dp_8">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="@string/bedroom"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvBedRoom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/dp_8"
                            android:paddingStart="@dimen/dp_8">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"                                android:text="@string/bathroom"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvBathRoom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llFurnish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_10"
                            android:visibility="gone"
                            android:paddingStart="@dimen/dp_8">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/furnish"
                                android:layout_weight="1.3"
                                android:textColor="@color/dark_black"
