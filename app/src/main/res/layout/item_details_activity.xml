<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar_product_details" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/flImageFrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/mDemoSliderDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.daimajia.slider.library.Indicators.PagerIndicator
                        android:id="@+id/custom_indicator_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_10" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_8">

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:id="@+id/tvProductName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"

                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/sp_18" />

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:id="@+id/tvLikes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:drawablePadding="@dimen/dp_10"
                            android:drawableStart="@mipmap/post_liked"

                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <com.verkoop.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvDateDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_8"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_8">

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:text="@string/category"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/sp_14" />

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:id="@+id/tvCategoryDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <com.verkoop.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@mipmap/condition_icon"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_8"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_8">

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:text="@string/price"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/sp_14" />

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:id="@+id/tvPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <com.verkoop.fonts.textView.GothiBoldTextView
