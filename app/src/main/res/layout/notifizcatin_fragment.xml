<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/profile_bg"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeftLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_1"
                android:contentDescription="@string/back"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_arrow_back_white" />

            <com.verkoopapp.fonts.textView.GothiBoldTextView
                android:id="@+id/tvHeaderLoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="2"
                android:text="@string/deal_location"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_8"
                android:contentDescription="@string/back"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/tick"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.verkoopapp.fonts.textView.GothicThinTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/email_notification"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_16" />

        <com.nightonke.jellytogglebutton.JellyToggleButton
            android:id="@+id/switchNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            app:jtbDuration="600"
            app:jtbJelly="active_stiff_slim_jim"
            app:jtbLeftBackgroundColor="@color/light_gry"
            app:jtbLeftThumbColor="@color/red_light"
            app:jtbRightThumbColor="@color/red_light"
            app:jtbRightBackgroundColor="@color/light_red"
            app:jtbRightTextColor="@color/light_gry" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.verkoopapp.fonts.textView.GothicThinTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:text="@string/push_notification"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_16" />

        <com.nightonke.jellytogglebutton.JellyToggleButton
            android:id="@+id/switchPush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            app:jtbDuration="600"
            app:jtbJelly="active_stiff_slim_jim"
            app:jtbLeftBackgroundColor="@color/light_gry"
            app:jtbLeftThumbColor="@color/red_light"
            app:jtbRightThumbColor="@color/red_light"
            app:jtbRightBackgroundColor="@color/light_red"
            app:jtbRightTextColor="@color/light_gry" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/gray" />
</LinearLayout>