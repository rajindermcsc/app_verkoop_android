<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bag"
    android:orientation="vertical">

    <include layout="@layout/details_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_15">

                    <com.verkoop.fonts.textView.GothicThinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_photos"
                        android:textColor="@color/text_gray_"
                        android:textSize="@dimen/sp_14" />

                    <com.verkoop.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvCountDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 / 10"
                        android:textColor="@color/text_gray_"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/flList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvImageList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="vertical">

                    <com.verkoop.fonts.editText.GothiBoldEditText
                        android:id="@+id/etNameDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="@dimen/dp_10"
                        android:hint="@string/name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="80"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/dp_8"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/light_gray" />

                    <View
                        android:id="@+id/vNameDetail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/llSelectCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:id="@+id/tvCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp_10"
                            android:text="@string/select_category"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:contentDescription="@string/image"
                            android:padding="@dimen/dp_10"
                            android:src="@mipmap/drop_down" />
                    </LinearLayout>

                    <View
                        android:id="@+id/vSelectCategory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/light_gray" />

                    <LinearLayout
                            android:id="@+id/llSelectBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.verkoop.fonts.textView.GothiBoldTextView
                            android:id="@+id/tvBrand"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp_10"
                            android:text="@string/select_brand"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/sp_16" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:contentDescription="@string/image"
                            android:padding="@dimen/dp_10"
                            android:src="@mipmap/drop_down" />
                    </LinearLayout>

                    <View
                        android:id="@+id/vBrand"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/light_gray"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llProperties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/llSelectZone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvZone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/dp_10"
                                android:text="@string/select_zone"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/sp_16" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:contentDescription="@string/image"
                                android:padding="@dimen/dp_10"
                                android:src="@mipmap/drop_down" />
                        </LinearLayout>

                        <View
                            android:id="@+id/vZone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/light_gray" />

                        <com.verkoop.fonts.editText.GothiBoldEditText
                            android:id="@+id/etStreetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawablePadding="@dimen/dp_10"
                            android:hint="@string/street_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="80"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="@dimen/dp_8"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/light_gray" />

                        <View
                            android:id="@+id/vStreetName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/light_gray" />

                        <com.verkoop.fonts.editText.GothiBoldEditText
                            android:id="@+id/etPostalCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawablePadding="@dimen/dp_10"
                            android:hint="@string/postal_code"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="80"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="@dimen/dp_8"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/light_gray" />

                        <View
                            android:id="@+id/vPostalCode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/light_gray" />

                    </LinearLayout>

                    <com.verkoop.fonts.editText.GothiBoldEditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="@dimen/dp_10"
                        android:hint="@string/price"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="80"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/dp_8"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/light_gray" />

                    <View
                        android:id="@+id/vPrice"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/llProperty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <com.verkoop.fonts.editText.GothiBoldEditText
                            android:id="@+id/etArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawablePadding="@dimen/dp_10"
                            android:hint="@string/area"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="80"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="@dimen/dp_8"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/light_gray" />

                        <View
                            android:id="@+id/vArea"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/light_gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingBottom="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/bedroom"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivMinusBedroom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/minimum" />

                                <com.verkoop.fonts.textView.GothiBoldTextView
                                    android:id="@+id/tvBedRoomCount"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/dark_black"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:id="@+id/ivAddBedRoom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/maximum" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingBottom="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/bathroom"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivMinusBathRoom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/minimum" />

                                <com.verkoop.fonts.textView.GothiBoldTextView
                                    android:id="@+id/tvBathroomCount"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/dark_black"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:id="@+id/ivAddBathRoom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/maximum" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCarFields"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.verkoop.fonts.editText.GothiBoldEditText
                            android:id="@+id/etRegistrationYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawablePadding="@dimen/dp_10"
                            android:hint="@string/registration_year"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:minLines="1"
                            android:padding="@dimen/dp_8"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/light_gray" />

                        <View
                            android:id="@+id/vRegistrationYear"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/light_gray" />

                        <LinearLayout
                            android:id="@+id/llCarOwner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingBottom="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_15"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/direct_owner"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/sp_16" />

                            <com.nightonke.jellytogglebutton.JellyToggleButton
                                android:id="@+id/switchDirectOwner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_10"
                                app:jtbDuration="600"
                                app:jtbJelly="lazy_tremble_head_fatty"
                                app:jtbLeftBackgroundColor="@color/light_gry"
                                app:jtbLeftThumbColor="@color/red_light"
                                app:jtbRightBackgroundColor="@color/light_gry"
                                app:jtbRightTextColor="@color/light_gry"
                                app:jtbRightThumbColor="@color/red_light" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/gray" />
                    </LinearLayout>

                    <com.verkoop.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvItemCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/item_condition"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:id="@+id/llItemCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llNewDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/item_type"
                            android:elevation="@dimen/dp_8"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dp_16"
                            android:paddingEnd="@dimen/dp_20"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_15">

                            <ImageView
                                android:id="@+id/ivNewDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/filter"
                                android:src="@mipmap/new_inactive" />

                            <com.verkoop.fonts.textView.GothicThinTextView
                                android:id="@+id/tvNewDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="New"
                                android:textColor="@color/gray_light"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llUsedDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/item_type"
                            android:elevation="@dimen/dp_8"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dp_15"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:paddingTop="@dimen/dp_18"
                            android:textColor="@color/gray_light"
                            android:textSize="@dimen/sp_14">

                            <ImageView
                                android:id="@+id/ivUsedDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/used"
                                android:src="@mipmap/used_inactive" />

                            <com.verkoop.fonts.textView.GothicThinTextView
                                android:id="@+id/tvUsedDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="@string/used"
                                android:textColor="@color/gray_light" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.verkoop.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvDealOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/deal_option"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/sp_14" />

                    <com.github.florent37.expansionpanel.ExpansionHeader
                       android:id="@+id/exLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_headerIndicator="@id/headerIndicator"
                        app:expansion_layout="@id/expansionLayout"
                        app:expansion_toggleOnClick="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/cbNearBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:button="@drawable/radio_button_selector"
                                android:layoutDirection="rtl"
                                android:paddingBottom="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_12"
                                android:paddingStart="@dimen/dp_12"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/meet_up"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/sp_14" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/gray_se"
                                android:visibility="visible" />
                        </LinearLayout>
                        <!-- HEADER INDICATOR -->
                        <ImageView
                            android:id="@+id/headerIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginStart="16dp"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp"
                            tools:ignore="RtlHardcoded" />


                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/expansionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="@string/location"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/sp_14" />

                            <com.verkoop.fonts.textView.GothiBoldTextView
                                android:id="@+id/tvPlaceAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_8"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/your_meet_up_location_and_schedule"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/sp_14" />

                            <View
                                android:id="@+id/view2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/gray_se"
                                android:visibility="visible" />
                        </LinearLayout>
                    </com.github.florent37.expansionpanel.ExpansionLayout>

                    <com.verkoop.fonts.textView.GothiBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/description"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/sp_14" />

                    <com.verkoop.fonts.editText.GothiBoldEditText
                        android:id="@+id/etDescriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@null"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="start"
                        android:hint="@string/describe_what_you_are_selling_and_include_any_details_a_buyer_might_be_insterested_in_people_love_items_what_stories"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/sp_14" />

                    <View
                        android:id="@+id/vDescription"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/light_gray" />

                    <com.verkoop.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvSave"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="@drawable/red_rectangular_shape"
                        android:elevation="@dimen/dp_8"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_35"
                        android:paddingStart="@dimen/dp_35"
                        android:text="@string/save"
