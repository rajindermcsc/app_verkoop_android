<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bag"
    android:orientation="vertical">

    <include layout="@layout/details_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15">

                <com.verkoop.fonts.textView.GothicThinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_photos"
                    android:textColor="@color/text_gray_"
                    android:textSize="@dimen/sp_14" />

                <com.verkoop.fonts.textView.GothiBoldTextView
                    android:id="@+id/tvCountDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0 / 10"
                    android:textColor="@color/text_gray_"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/flList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvImageList"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginStart="@dimen/dp_15" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="vertical">

                <com.verkoop.fonts.editText.GothiBoldEditText
                    android:id="@+id/etNameDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="80"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="@dimen/dp_8"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/light_gray" />

                <View
                    android:id="@+id/vNameDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:id="@+id/llSelectCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.verkoop.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:text="@string/select_category"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:src="@mipmap/drop_down"
                        android:contentDescription="@string/image" />
                </LinearLayout>

                <View
                    android:id="@+id/vSelectCategory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/light_gray" />

                <com.verkoop.fonts.editText.GothiBoldEditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="@string/price"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="80"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="@dimen/dp_8"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/light_gray" />

                <View
                    android:id="@+id/vPrice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/light_gray" />

                <com.verkoop.fonts.textView.GothiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/item_condition"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llNewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/item_type"
                        android:elevation="@dimen/dp_8"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_20"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/ivNewDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/filter"
                            android:src="@mipmap/new_inactive" />

                        <com.verkoop.fonts.textView.GothicThinTextView
                            android:id="@+id/tvNewDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="New"
                            android:textColor="@color/gray_light"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llUsedDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/item_type"
                        android:elevation="@dimen/dp_8"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:paddingStart="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_18"
                        android:textColor="@color/gray_light"
                        android:textSize="@dimen/sp_14">

                        <ImageView
                            android:id="@+id/ivUsedDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/used"
                            android:src="@mipmap/used_inactive" />

                        <com.verkoop.fonts.textView.GothicThinTextView
                            android:id="@+id/tvUsedDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="@string/used"
                            android:textColor="@color/gray_light" />
                    </LinearLayout>
                </LinearLayout>

                <com.verkoop.fonts.textView.GothiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/description"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_14" />

                <com.verkoop.fonts.editText.GothiBoldEditText
                    android:id="@+id/etDescriptionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@null"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="start"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingStart="@dimen/dp_8"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/light_gray" />

                <View
                    android:id="@+id/vDescription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/light_gray" />

                <com.verkoop.fonts.textView.GothiBoldTextView
                    android:id="@+id/tvSave"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/red_rectangular_shape"
                    android:elevation="@dimen/dp_8"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_35"
                    android:paddingStart="@dimen/dp_35"
                    android:text="@string/save"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>