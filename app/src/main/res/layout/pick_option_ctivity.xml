<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:orientation="vertical">

                <com.verkoopapp.fonts.textView.GothicThinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/pick_any"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />

                <com.verkoopapp.fonts.textView.GothiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/one_option"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="@dimen/dp_5">

                    <com.verkoopapp.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvSellNow"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@drawable/button_background_capsule"
                        android:gravity="center"
                        android:padding="@dimen/dp_12"
                        android:text="SELL NOW"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_18"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="@dimen/dp_5">

                    <com.verkoopapp.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvShopNow"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@drawable/button_background_capsule"
                        android:gravity="center"
                        android:padding="@dimen/dp_12"
                        android:text="SHOP NOW"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@drawable/button_background_capsule"
                android:orientation="vertical">


                    <com.verkoopapp.fonts.textView.GothiBoldTextView
                        android:id="@+id/tvMayBeLater"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/maybe_later"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>