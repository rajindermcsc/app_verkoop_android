<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:background="@drawable/profile_bg"
    android:contentInsetEnd="0dp"
    android:contentInsetLeft="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetStart="0dp"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_white" />

            <com.verkoopapp.fonts.textView.GothiBoldTextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18"
                android:layout_toRightOf="@+id/iv_left_detail"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/men_s_fashion">


            </com.verkoopapp.fonts.textView.GothiBoldTextView>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rvFilterSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_toLeftOf="@+id/ivChatDetail"
                android:id="@+id/ivFilter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_5"
                android:contentDescription="@string/favourite"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_filter_white" />

            <ImageView
                android:id="@+id/ivChatDetail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:contentDescription="@string/chat"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_chats_white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">





        <com.verkoopapp.fonts.textView.GothiBoldTextView
            android:id="@+id/toolbar_title_"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_8"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="@color/gray_light"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/ic_search"
            android:background="@drawable/white_rect_shape"
            android:textSize="@dimen/sp_14"/>


        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>
