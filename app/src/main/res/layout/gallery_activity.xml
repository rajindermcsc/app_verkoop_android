<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar_filter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_12">
    <com.verkoop.fonts.textView.GothicThinTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_are_you"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/dark_black"/>
        <com.verkoop.fonts.textView.GothiBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/listing_today"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/dark_black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
        <com.verkoop.fonts.textView.GothicThinTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_gray"
            android:text="@string/selected"/>

            <com.verkoop.fonts.textView.GothiBoldTextView
                android:id="@+id/tvSelectedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/dark_black"
                android:text=" 0 / 10"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llParentGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>